{
  "name": "daily-expense-tracker",
  "version": "0.1.0",
  "description": "Simple full-stack app to record daily payments and provide statistics",
  "type": "module",
  "main": "server.js",
  "scripts": {
    "dev:api": "nodemon server.js",
    "dev:ui": "live-server public --port=5000",
    "dev": "concurrently \"npm run dev:api\" \"npm run dev:ui\"",
    "format": "prettier --write .",
    "test": "cross-env NODE_OPTIONS=--experimental-vm-modules jest --runInBand"
  },
  "keywords": [
    "expense",
    "tracker",
    "express",
    "sqlite",
    "fullstack"
  ],
  "author": "David",
  "license": "MIT",
  "dependencies": {
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "express": "^4.19.2",
    "sqlite": "^5.1.1",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "concurrently": "^9.2.0",
    "cross-env": "^7.0.3",
    "eslint": "^9.1.1",
    "jest": "^30.0.3",
    "live-server": "^1.2.2",
    "nodemon": "^3.1.10",
    "prettier": "^3.2.5"
  },
  "engines": {
    "node": ">=18"
  }
}
